<div class="navbar">
    <div class="navbar__wrapper">
        <div class="navbar__header">
            <h1 class="navbar__title"><a href="/">{{ site.name }}</a></h1>
            <a class="navbar__toggle" aria-label="Toggle navigation menu">
                {% include "../../assets/icons/menu.svg" %}
            </a>
        </div>
        <nav role="navigation" class="navbar__menu">
            {%- for link in collections.all | eleventyNavigation %}
                <a class="navbar__menu__item {% if (link.url != "/" or link.url == page.url) and link.url in page.url %}navbar__menu__item--active{% endif %}" href="{{ link.url }}">
                    {{ link.title }}
                </a>
            {%- endfor %}
        </nav>
    </div>
</div>
